pipeline {
  agent any
  tools {
    gradle 'Gradle'
    jdk 'JDK'
  }
  stages {
    stage('Checkout') {
      steps {
        git branch: 'master', url: 'https://github.com/bitcse6c/1BI22CS154_ShreyaHegde_GradleProject'
      }
    }
    stage('Build') {
      steps {
        sh 'gradle build'
      }
    }
    stage('Run Application') {
      steps {
        sh 'gradle run'
      }
    }
  }
  post {
    success {
      echo 'Build Gradle Successful'
    }
    failure {
      echo 'Build failed!'
    }
  }
}

